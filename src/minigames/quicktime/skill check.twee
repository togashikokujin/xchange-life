  (if:$roll >= $needed)[
    (if:$game_type is "quicktime")[
      (replace:?score_bar)[{
        (print: "<script>GE.updateStats(" + (text: $quicktime_params's "points to win") + "," + (text: $quicktime_params's "points to win") + ");")
